{
    "manifest_version":2,
    "name": "Wikipedia Copy",
    "version": "1.0.2",

    "description": "Copy pure text from Wikipedia!",

    "icons": {
        "128": "img/wiki128.png",
        "64": "img/wiki64.png",
        "48": "img/wiki48.png",
        "16": "img/wiki16.png"
    },

    "content_scripts":[
        {
            "matches": [
                "http://*.wikipedia.org/*",
                "https://*.wikipedia.org/*"
            ],
            "js": ["content.js"]
        }
    ],

    "browser_action": {
        "default_icon": "img/wiki16.png",
        "default_popup": "popup/popup.html",
        "default_title": "Wikipedia Copy"
    },

    "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+E",
            "mac": "MacCtrl+Shift+E"
          },
          "description": "Open extension menu."
        }
    }

}